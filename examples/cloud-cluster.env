# Cloud cluster configuration example
# Copy this to .env and customize for your cloud deployments

# Elasticsearch Configuration (Elastic Cloud)
ELASTICSEARCH_HOSTS=https://your-cluster-id.es.region.cloud.provider.com:443
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your-secure-password

# OpenSearch Configuration (AWS OpenSearch)
OPENSEARCH_HOSTS=https://search-your-domain.region.es.amazonaws.com

# Index Configuration
INDEX_NAME=production-index

# Test Configuration (longer for production testing)
TEST_DURATION=600         # 10 minutes
NUM_CLIENTS=10           # Higher concurrency

# Performance Tuning
HTTP_TIMEOUT=60
CONNECTION_POOL_SIZE=20
MAX_RETRIES=3
RETRY_BACKOFF=2

# Python Environment
PYTHON_VERSION=3.11.4